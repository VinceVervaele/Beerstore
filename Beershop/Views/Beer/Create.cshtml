@model BeerShop.ViewModels.BeerCreateVM

@{
    ViewData["Title"] = "Create";
}



<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brouwernr" class="control-label"></label>
                @*    <input asp-for="Brouwernr" class="form-control" />*@
                <select asp-for="Brouwernr" class="form-control"
                        asp-items="@Model.Breweries">
                    <option>Please select</option>
                </select>
                <span asp-validation-for="Brouwernr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soortnr" class="control-label"></label>
                @*        <input asp-for="Soortnr" class="form-control" />*@
                <select asp-for="Soortnr" class="form-control"
                        asp-items="@Model.Varieties">
                    <option>Please select</option>
                </select>
                <span asp-validation-for="Soortnr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alcohol" class="control-label"></label>
                <input asp-for="Alcohol" class="form-control" />
                <span asp-validation-for="Alcohol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
